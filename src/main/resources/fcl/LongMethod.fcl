FUNCTION_BLOCK FB

VAR_INPUT
	number_of_instructions : REAL;
END_VAR

VAR_OUTPUT
	res : REAL;
END_VAR

FUZZIFY number_of_instructions
	TERM high := (Long_method_noi_high, 0) (Long_method_noi_veryHigh, 1);
END_FUZZIFY

DEFUZZIFY res
	METHOD : LM;
	TERM long := (0, 0) (1, 1);
	DEFAULT := 0;		// Default value is 0 (if no rule activates defuzzifier)
END_DEFUZZIFY

RULEBLOCK No1
	RULE 1 : IF number_of_instructions IS high THEN res IS long;
END_RULEBLOCK

END_FUNCTION_BLOCK