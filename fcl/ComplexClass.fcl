FUNCTION_BLOCK FB

VAR_INPUT
	class_complexity : REAL;
END_VAR

VAR_OUTPUT
	res : REAL;
END_VAR

FUZZIFY class_complexity
	TERM high := (28, 0) (43, 1);
END_FUZZIFY

DEFUZZIFY res
	METHOD : LM;
	TERM cc := (0, 0) (1, 1);
	DEFAULT := 0;		// Default value is 0 (if no rule activates defuzzifier)
END_DEFUZZIFY

RULEBLOCK No1
	RULE 1 : IF class_complexity IS high THEN res IS cc;
END_RULEBLOCK

END_FUNCTION_BLOCK